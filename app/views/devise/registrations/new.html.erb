<% content_for :page_title, "Sign up" %>
<%= stylesheet_link_tag 'devise', media: 'all' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="devise-caption">
    Sign up
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :password do %>
      Password
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
      <% end %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="panel-button-link" style="margin-top: 20px;">
    <%= link_to "or log in..", new_session_path(resource_name), class: "link" %>
    <%= f.submit "Sign up", style: "width: 92px;" %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>